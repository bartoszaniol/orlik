generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int     @id @default(autoincrement())
  username       String?
  email          String  @unique
  telephone      String?
  firebase_token String
  groups         Group[] @relation("UserGroups")
}

model Venue {
  id              Int      @id @default(autoincrement())
  name            String
  phone           String
  mail            String?
  logo            String?
  adress          String
  type            String
  availability    String[]
  booking_options String[]
}

model Group {
  id          Int     @id @default(autoincrement())
  name        String
  members     User[]  @relation("UserGroups")
  type        Type    @default(GROUP)
  invite_link String?
}

enum Type {
  GROUP
  ORG
}
